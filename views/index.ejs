<%- include("partials/header") %>


   <!-- Login Bar -->
   <nav class="navbar-fixed-top">

     <div class="login">

      <div class="form-row d-flex justify-content-end">

        <div class="col-sm">

          <form class="form-group" action="/login" method="post">
            <input class="emailLog " type="email" name="username" placeholder="Email" size="28" required autofocus>
            <input class="passwordLog " type="password" name="password" placeholder="Password " size="12" required>
            <button class="btn btn-outline-success btn-login btn-sm" type="submit" name="button">Login</button>
          </form>

        </div>

      </div> 

     </div> 

   </nav>


   <div class="container-fluid brandLogo">
     <div class="row">

        <!-- Product Name -->
       <div class="col-lg col-sm col-md heading">
         <h1 class="notebook">The NoteBook</h1>
         <h5 class="description">Take a Note</h5>
     </div>

        <!-- SignUp bar -->
       <div class="col-lg col-sm col-md">


         <form class="form-group" action="/signup" method="post">

            <!-- Name input form -->
            <div class=" form-row d-flex justify-content-start">
              <input class="top is-valid" type="text" name="fname"  pattern="[A-Za-z]" placeholder="First Name" size="18" required autofocus>
              <input class="middle is-valid" type="text" name="lname" pattern="[A-Za-z]" placeholder="Last Name" size="20" required>
           </div>

           <!-- Email input form -->
           <div class="form-row">
             <input class="bottom" type="email" name="username" size="44" placeholder="Email" autocomplete="off" required>
           </div>

           <!-- Password input form -->
           <div class="form-row">
             <input class="password" type="password" name="password" size="44" autocomplete="off" placeholder="Password (min 8 characters)" maxlength="12" minlength="8" required>
           </div>

           <!-- Password Re enter form -->
           <div class="form-row">
             <input class="password" type="password" name="passwordMatch" size="44" autocomplete="off" placeholder="Re-enter Password" maxlength="12" minlength="8" required>
           </div>

            <!-- Submit button  -->
           <div class="form-row">
             <button class="btn btn-outline-success btn-signup" type="submit" name="submit">Sign Up</button>
           </div>

         </form>
       </div>
     </div>
   </div>

   <%- include("partials/footer") %>
